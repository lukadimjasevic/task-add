{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["warn", "always"],
        "quotes": ["warn", "double"],
        "no-var": ["warn"],
        "no-duplicate-imports": ["warn"],
        "accessor-pairs": ["warn"],
        "camelcase": ["warn"],
        "capitalized-comments": ["warn"],
        "no-inline-comments": ["warn"],
        "curly": ["warn"],
        "dot-notation": ["warn"],
        "@typescript-eslint/no-explicit-any": ["off"]
    }
}
